<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/homepage">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/olive" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="150dp"
                android:layout_toEndOf="@+id/imageView9"
                android:textColor="@color/white"
                android:layout_marginTop="85dp"
                android:text="Selamat Pagi"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginStart="24dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/imageView9"
                android:text="Olivia Gabrielle" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toEndOf="@id/imageView9"
                android:layout_marginStart="24dp"
                android:text="olivia.gabriel@gmail.com"
                android:textSize="11dp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tombol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250px"
                android:layout_marginLeft="363dp"
                android:background="@drawable/navigation"
                />
            
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:foregroundGravity="center_vertical">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/hori1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hori1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"/>

                   <RelativeLayout
                       android:id="@+id/relative1"
                       android:layout_width="320dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/hori2"
                       android:layout_alignParentTop="true"
                       android:layout_marginLeft="10dp"
                       android:layout_toRightOf="@id/hori1">
                       
                       <View
                           android:layout_width="85dp"
                           android:layout_height="85dp"
                           android:background="@drawable/tutupbtl"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentTop="true"
                           android:layout_marginLeft="26dp"
                           android:layout_marginTop="51dp"/>
                       <View
                           android:id="@+id/group_373"
                           android:layout_width="88dp"
                           android:layout_height="21dp"
                           android:layout_alignParentLeft="true"
                           android:layout_marginLeft="124dp"
                           android:layout_alignParentTop="true"
                           android:layout_marginTop="58dp"
                           android:background="#1A529D"/>

                       <View
                           android:id="@+id/rectangle_489"
                           android:layout_width="140dp"
                           android:layout_height="21dp"
                           android:layout_alignParentLeft="true"
                           android:layout_marginLeft="123dp"
                           android:layout_alignParentTop="true"
                           android:layout_marginTop="100dp"
                           android:background="#1A529D"
                           />

                       <TextView
                           android:id="@+id/scan_kode_d"
                           android:layout_width="157dp"
                           android:layout_height="87dp"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentTop="true"
                           android:layout_marginLeft="124dp"
                           android:layout_marginTop="55dp"
                           android:gravity="center_vertical"
                           android:text="@string/scan_kode_d"
                           android:textAppearance="@style/scan_kode_d" />
                   </RelativeLayout>
                    
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hori3"
                        android:layout_toRightOf="@id/relative1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgraise"
                android:layout_marginTop="450dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">
                
                <Button
                    android:id="@+id/relative2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/barcode"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="150dp"/>

                <TextView
                    android:id="@+id/relative3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/relative2"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="Tutup botol"
                    android:textColor="#4D4D4D"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="45sp"
                    android:textColor="#4D4D4D"
                    android:fontFamily="@font/montserratbold"
                    android:layout_alignStart="@id/relative3"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="7dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/vaganza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaganza Fiesta"
                android:textSize="20dp"
                android:fontFamily="@font/montserratbold"
                android:textColor="#4D4D4D"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="734dp"
                android:lineHeight="900dp"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diskon"
                android:layout_marginTop="774dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shope"
                android:layout_marginTop="774dp"
                android:layout_marginLeft="225dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/food"
                android:layout_marginTop="1004dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher"
                android:layout_marginTop="1004dp"
                android:layout_marginLeft="225dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/suprise"
                android:layout_marginTop="1297dp"
                android:layout_marginLeft="31dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>


            <TextView
                android:id="@+id/hadiahmenarik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadiah Menarik"
                android:textSize="18dp"
                android:fontFamily="@font/montserratbold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1254dp"
                android:lineHeight="900dp"/>




        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/hal_view"
        android:layout_gravity="end"
        app:menu="@menu/menuslide"/>





</androidx.drawerlayout.widget.DrawerLayout>